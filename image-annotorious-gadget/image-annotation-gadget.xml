<Module>
<ModulePrefs title="Image Gadget" height="60">
<Require feature="wave"/>
<Require feature="dynamic-height"/>
</ModulePrefs>
<Content type="html">
<![CDATA[
  <head>
    <link rel="stylesheet" type="text/css" href="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/css/image-annotation-font.css"/>
    <link rel="stylesheet" type="text/css" href="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/annotorious/css/annotorious.css"/>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/themes/base/jquery-ui.css" type="text/css"/>
    <link href="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/css/image-annotation-gadget-v2.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div id="scrollBodyWrapper">
      <div id="loadImageMenu">
        <input type="text" id="imageUrlText" placeholder="Enter Image URL Or Paste Image..."></input>
        <button id="loadImageButton">Load Image</button>
        <div id="imageTooBigText"></div>
      </div>
      <div id="imageDiv">
        <input type="checkbox" id="toggleAnnotationsCheckBox" checked="checked" />
        <label for="toggleAnnotationsCheckBox" id ="toggleAnnotationsLabel" data-icon="&#xe001;"></label>
        <img id="imageToAnnotate"></img>
      </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.0/jquery-ui.min.js"></script>
    <script src="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/annotorious/annotorious.0.3.min.js"></script>
    <script src="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/js/load-image.js"></script>
    <script src="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/js/save-load-annotations.js"></script>
    <script src="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/js/resize-image.js"></script>
    <script src="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/js/sync-with-wave.js"></script>
    <script src="https://c9.io/robintibor/rizzoma-gadget/workspace/image-annotorious-gadget/js/hide-show-annotations.js"></script>
  </body>
]]>
</Content>
</Module>